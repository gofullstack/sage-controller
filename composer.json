{
  "name": "gofullstack/sage-controller",
  "type": "package",
  "license": "MIT",
  "description": "WordPress package to enable a basic controller when using Blade with Sage 9",
  "homepage": "https://github.com/gofullstack",
  "authors": [
    {
      "name": "Darren Jacoby",
      "email": "darren@jacoby.co.za",
      "homepage": "https://github.com/darrenjacoby"
    }
  ],
  "keywords": [
    "wordpress"
  ],
  "support": {
    "issues": "https://github.com/gofullstack/sage-controller/issues"
  },
  "require": {
    "php": "^7.4|^8.0",
    "composer/installers": "~2.0",
    "hassankhan/config": "^3.1.0",
    "symfony/yaml": "^7.0.07",
    "brain/hierarchy": "^3.2"
  },
  "autoload": {
    "psr-4": {
      "Sober\\Controller\\": "src/",
      "Sober\\Controller\\Module\\": "src/Module/"
    },
    "files": [
      "controller.php"
    ]
  },
  "scripts": {
    "test": [
      "vendor/bin/phpcs --extensions=php --ignore=vendor/ ."
    ]
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true
    }
  }
}
